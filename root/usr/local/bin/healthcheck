#!/usr/bin/with-contenv bash
. /usr/local/bin/variables

if [ "$poolingfs" == "mergerfs" ] || [ "$poolingfs" == "unionfs" ]; then
    if [ $(findmnt ${fuse_mountpoint} | grep fuse.${poolingfs} | wc -l) -ne 1 ]; then
        echo "mount ${fuse_mountpoint} should only appear once but was found $(findmnt ${fuse_mountpoint} | grep fuse | wc -l) instead"
        exit 1
    fi
fi

exit 0
